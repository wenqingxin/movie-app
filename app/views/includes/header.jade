.container
    .row
        .page-header.clearfix
            h1= title
            .col-md-4
                small 重度科幻迷
.navbar.navbar-default.navbar-fixed-top
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#bs-example-navbar-collapse-1",aria-expanded="false")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/') 重度科幻迷
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                    a(href='/admin/movie/list') 电影列表
                li
                    a(href='/admin/userlist') 用户列表
                li
                    a(href='/admin/movie/catetory/list') 分类列表
            form.navbar-form.navbar-left(method='get',action='/result')
                .input-group
                    input.form-control(type='text',name='q')
                    span.input-group-btn
                        button.btn.btn-default(type='submit') 搜索
            if user
                p.navbar-text.navbar-right
                    span 欢迎您，#{user.name}
                    span &nbsp;&nbsp;
                    a.navbar-link(href="/users/logout") 登出
            else
                p.navbar-text.navbar-right
                    a.navbar-link(href="#",data-toggle='modal',data-target="#signupModal") 注册
                    span &nbsp;&nbsp;
                    a.navbar-link(href="#",data-toggle='modal',data-target="#signinModal") 登录
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="post",action="/users/signup")
                .modal-header 注册
                .modal-body
                    .form-group
                        label(for="signupName") 用户名
                        input#signupName.form-control(name="name",type='text')
                    .form-group
                        label(for="signupPasswd") 密码
                        input#signupPasswd.form-control(name="password",type='password')
                .modal-footer
                    button.btn.btn-default(type='button',data-dismiss="modal") 关闭
                    button.btn.btn-success(type='submit') 提交
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="post",action="/users/signin")
                .modal-header 登录
                .modal-body
                    .form-group
                        label(for="signupName") 用户名
                        input#signinName.form-control(name="name",type='text')
                    .form-group
                        label(for="signinPasswd") 密码
                        input#signinPasswd.form-control(name="password",type='text')
                .modal-footer
                    button.btn.btn-default(type='button',data-dismiss="modal") 关闭
                    button.btn.btn-success(type='submit') 登录
