extends ../layout.jade

block content
  .container
    .row
      form.form-horizontal(method="post",action="/admin/movie/new",enctype='multipart/form-data')
        input(type='hidden',name="_id",value="#{movie._id}")
        .form-group
          .col-sm-2
            label.control-label(for='douban') 豆瓣同步
          .col-sm-10
            input#douban.form-control(type='text')
        .form-group
          .col-sm-2
            label.control-label(for="inputCatetory") 电影分类
          .col-sm-10
            input#inputCatetory.form-control(type="text",name='catetoryName',value=movie.catetoryName)
        .form-group
          .col-sm-2
            label.control-label(for="inputCatetory") 电影分类
          each cat in catetories
            label.radio-inline
              if movie.catetory
                input(type='radio',name="catetory",value='#{cat._id}',checked=cat._id.toString() == movie.catetory.toString())
              else
                input(type='radio',name="catetory",value='#{cat._id}')
              | #{cat.name}
        .form-group
          .col-sm-2
            label.control-label(for="inputTitle") 电影名字
          .col-sm-10
            input#inputTitle.form-control(type="text",name='title',value='#{movie.title}')
        .form-group
          .col-sm-2
            label.control-label(for="inputDirector") 导演
          .col-sm-10
            input#inputDirector.form-control(type="text",name='director',value='#{movie.director}')
        .form-group
          .col-sm-2
            label.control-label(for="inputCountry") 国家
          .col-sm-10
            input#inputCountry.form-control(type="text",name='country',value='#{movie.country}')
        .form-group
          .col-sm-2
            label.control-label(for="inputLanguage") 语言
          .col-sm-10
            input#inputLanguage.form-control(type="text",name='language',value='#{movie.language}')
        .form-group
          .col-sm-2
            label.control-label(for="inputYear") 上映年份
          .col-sm-10
            input#inputYear.form-control(type="text",name='year',value='#{movie.year}')
        .form-group
          .col-sm-2
            label.control-label(for="inputSummary") 简介
          .col-sm-10
            input#inputSummary.form-control(type="text",name='summary',value='#{movie.summary}')
        .form-group
          .col-sm-2
            label.control-label(for='inputPoster') 海报
          .col-sm-10
            input#inputPoster.form-control(type="text",name='poster',value='#{movie.poster}')
        .form-group
          .col-sm-2
            label.control-label(for='uploadPoster') 海报上传
          .col-sm-10
            input#uploadPoster(type="file",name='uploadPoster')
        .form-group
          .col-sm-2
            label.control-label(type='inputFlash') 链接地址
          .col-sm-10
            input#inputFlash.form-control(type="text",name='flash',value='#{movie.flash}')
        .form-group
          .col-sm-12
            button.btn.btn-primary.center-block 提交
  script(src='/javascripts/admin.js',type='text/javascript')



