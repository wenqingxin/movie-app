extends ../layout

block content
    .container
        .row
            a.btn.btn-primary(href='/admin/movie/catetory/') 增加
            table.table.table-hover.table-bordered.table-responsive
                thead
                    th 类别名字
                    //th 查看
                    th 修改
                    th 删除
                tbody
                    each item in catetories
                        tr(class="item-id#{item._id}")
                            td= item.name
                            //td= moment(item.meta.createAt).format('MM/DD/YY')
                            //td: a(target="_blank",href="../users/movie/#{item._id}") 查看
                            td: a(href="/admin/movie/catetory?id=#{item._id}") 修改
                            td
                                button.btn.btn-danger.del-cat(type='button',data-id="#{item._id}") 删除
    script(src='/javascripts/admin.js' type='text/javascript')



