extends ../layout

block content
  .container
    .row
      each cat in catetories
        .panel.panel-default
          .panel-heading
            h3
              a(href='/result?cat=#{cat._id}&p=1') #{cat.name}
          .panel-body
            if cat.movies &&cat.movies.length > 0
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/users/movie/#{item._id}")
                      if(item.poster.indexOf('http')>-1)
                        img(src="#{item.poster}" alt="#{item.title}")
                      else
                        img(src="/upload/#{item.poster}" alt="#{item.title}")
                    .caption
                      .small.text-center #{item.title}
